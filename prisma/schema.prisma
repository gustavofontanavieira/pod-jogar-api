generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  lastName String
  email String @unique
  password String
  image String?
  podcasts Podcasts[]
  favoritesPodcasts FavoritesPodcasts[]

  @@map("User")
}

model Podcasts {
  id String @id @default(uuid())
  name String
  description String
  image String
  file String
  favoritesPodcasts FavoritesPodcasts[]

  userAuthorId String
  userAuthor User @relation(fields: [userAuthorId], references: [id])

  categoriesId String
  categories Categories @relation(fields: [categoriesId], references: [id])

  @@map("Podcasts")

}

model Categories {
  id String @id @default(uuid())
  name String
  podcasts Podcasts[]

  @@map("Categories")
}

model FavoritesPodcasts {
  id String @id @default(uuid())
  
  userId String
  userFavorites User @relation(fields: [userId], references: [id])

  podcastsId String
  podcastsFavorites Podcasts @relation(fields: [podcastsId], references: [id])
}